{% extends 'base.html.twig' %}

{% block title %}Bon Appétit - Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <div class="col">
                <h1>Dernières recettes ajoutées:</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            {% for recipe in recipes %}
                <div class="col-12 col-sm-10 col-md-6 col-xl-4 mt-4">
                    <a href="{{ path('recipe_show', {'recipeSlug': recipe.slug}) }}">
                        <div class="card text-center">
                            <img src="{{ asset('uploads/' ~ recipe.image) }}" class="card-img-top" alt="{{ recipe.image }}">
                            <div class="card-body" >
                                <p class="card-text">{{ recipe.title }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
