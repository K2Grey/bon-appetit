{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4">
            <div class="col text-center">
                <h1>{{ recipe.title }}</h1>
            </div>
        </div>
        <div class="row justify-content-center my-4">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                <img src="{{ asset('uploads/' ~ recipe.image) }}" class="card-img-top" alt="{{ recipe.image }}">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 col-md-4 pb-4">
                <div class="card">
                    <div class="card-header">
                        Personnes
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ recipe.serving }}</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 pb-4">
                <div class="card">
                    <div class="card-header">
                        Temps préparation
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ recipe.preparationTime ? recipe.preparationTime|date('G:i') : '' }}</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 pb-4">
                <div class="card">
                    <div class="card-header">
                        Temps cuisson
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ recipe.cookingTime ? recipe.cookingTime|date('G:i') : '' }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6 pb-4">
                <div class="card">
                    <div class="card-header">
                        Préparation
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ recipe.preparation }}</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6 pb-4">
                <div class="card">
                    <div class="card-header">
                        Ingrédients
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ recipe.ingredient }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex justify-content-end">
                <a href="{{ path('recipe_edit', {'recipeSlug': recipe.slug}) }}" class="btn btn-secondary mr-2">Modifier</a>
                {{ include('recipe/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
