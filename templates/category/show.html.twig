{% extends 'base.html.twig' %}

{% block title %}Bon App√©tit - {{ categoryName }}{% endblock %}

{% block body %}
    <h2>{{ categoryName }}:</h2>
    <div class="container-fluid">
        <div class="row">
            {% for recipe in recipes %}
                <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 mt-4">
                    <a href="{{ path('recipe_show', {'recipeSlug': recipe.slug}) }}">
                        <div class="card text-center">
                            <img src="{{ asset('uploads/' ~ recipe.image) }}" class="card-img-top" alt="{{ recipe.image }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ recipe.title }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
